PORT=5000
NODE_ENV=development
JWT_SECRET=dronefleet-secret-key-should-be-changed-in-production
JWT_EXPIRES_IN=1d

# MongoDB
MONGODB_URI=mongodb://localhost:27017/dronefleet

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
